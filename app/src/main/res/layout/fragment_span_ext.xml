<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.lxj.androidktxdemo.ShadowLayout
            app:sl_shadow_color="#f00"
            app:sl_shadow_blur="40dp"
            app:sl_shadow_round="10dp"
            app:sl_shadow_offset_top="10dp"
            app:sl_shadow_offset_left="20dp"
            app:sl_shadow_offset_bottom="10dp"
            app:sl_shadow_offset_right="20dp"
            android:background="#fff"
            android:layout_margin="40dp"
            android:layout_width="200dp"
            android:layout_height="100dp"/>

        <TextView
            style="@style/TitleStyle"
            android:id="@+id/tvSizeSpan" />

        <TextView
            style="@style/ResultStyle"
            android:id="@+id/tvSizeResult" />

        <include layout="@layout/divider"/>

        <TextView
            style="@style/TitleStyle"
            android:id="@+id/tvColorSpan" />

        <TextView
            style="@style/ResultStyle"
            android:id="@+id/tvColorResult" />

        <include layout="@layout/divider"/>
        <TextView
            style="@style/TitleStyle"
            android:id="@+id/tvBgColorSpan" />

        <TextView
            style="@style/ResultStyle"
            android:id="@+id/tvBgColorResult" />

        <include layout="@layout/divider"/>

        <TextView
            style="@style/TitleStyle"
            android:id="@+id/tvStrikethrougthSpan" />

        <TextView
            style="@style/ResultStyle"
            android:id="@+id/tvStrikethrougthResult" />

        <include layout="@layout/divider"/>

        <TextView
            style="@style/TitleStyle"
            android:id="@+id/tvClickSpan" />

        <TextView
            style="@style/ResultStyle"
            android:id="@+id/tvClickResult" />

        <include layout="@layout/divider"/>


        <com.lxj.androidktx.widget.ShapeTextView
            android:id="@+id/tt"
            android:layout_marginLeft="20dp"
            android:text="试试"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:drawableTop="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekBar1"
            android:max="500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekBar2"
            android:max="500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/divider"/>
        <TextView
            style="@style/ResultStyle"
            android:layout_marginBottom="20dp"
            android:id="@+id/tvAppendResult" />

        <com.lxj.androidktx.widget.ShapeEditText
            android:id="@+id/et"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:set_corner="5dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:set_stroke="#f00"
            app:set_strokeWidth="1dp"
            android:hint="请输入名字，我自带border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.lxj.androidktx.widget.ShapeTextView
            app:stv_corner="20dp"
            app:stv_solid="#8000"
            android:textSize="14dp"
            android:id="@+id/tvDemo"
            android:textColor="#fff"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_marginBottom="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>